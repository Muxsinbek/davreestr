<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6699F2"
    android:orientation="vertical"
    android:scrollbarStyle="insideOverlay"
    android:verticalScrollbarPosition="defaultPosition">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/img"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="@string/main_title"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:background="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--BUTTONS-->

            <TextView
                android:id="@+id/cad_num"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/box_corner"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:text="@string/cad_text"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/cad_num_edit"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/box_corner"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:paddingTop="1dp"
                android:paddingStart="10dp"
                android:text="@string/cad_input_text"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_color"
                tools:ignore="RtlSymmetry" />


            <Button
                android:id="@+id/cad_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="120dp"
                android:layout_marginTop="18dp"
                android:text="@string/cad_search"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:drawableEnd="@drawable/cad_search"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/round"
                android:orientation="vertical"
                android:paddingBottom="64dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/view_pager_box"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WHITE"
                    android:textSize="24dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WHITE"
                    android:textSize="24dp" />
                <!--OTHER VIEWS-->
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>